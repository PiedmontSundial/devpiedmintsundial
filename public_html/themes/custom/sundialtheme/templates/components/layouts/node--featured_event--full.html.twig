	  x[0].style.display = "none";
	  x[1].style.display = "none";
	  
	  var y = document.getElementsByClassName("map-itself");
	  y[0].width = "250";
	  y[1].width = "500";
	  
	  var z = document.getElementsByClassName("map-box");
	  z[0].style.display = "block";
