      <div class="map-border-1">
        <div class="map-border-2">
          <div class="map-box">
            <iframe class="map-itself" src="https://www.google.com/maps/embed/v1/place?q={{ node.field_featured_carousel_event.entity.field_venue.entity.field_venue_address.value }}
              {{ node.field_featured_carousel_event.entity.field_venue.entity.field_city.entity.name.value }},{{ node.field_featured_carousel_event.entity.field_venue.entity.field_zip_code.value }}
              &zoom=17&key=AIzaSyCdQhB6gNRYJLkPLpOsmWOHSf5LTFo_-tg" height="500">
            </iframe>
