            Moderators:<br>
            {% for Moderator in node.field_featured_carousel_event.entity.field_moderators %}
              {{ Moderator.value }}<br>
            {% endfor %}
          {% else %}
            Moderator: {{ node.field_featured_carousel_event.entity.field_moderators.value }}<br>
          {% endif %}
        </div>
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_speakers.0.value|length %}
        <div id="Government-Speaker">
          {% if node.field_featured_carousel_event.entity.field_speakers.1.value|length %}
            Speakers:<br>
            {% for Speaker in node.field_featured_carousel_event.entity.field_speakers %}
              {{ Speaker.value }}<br>
            {% endfor %}
          {% else %}
            Speaker: {{ node.field_featured_carousel_event.entity.field_speakers.value }}<br>
          {% endif %}
        </div>
      {% endif %}
    {% elseif node.field_featured_carousel_event.entity.field_event_category.value == 'Theatre' %}
      {% if node.field_featured_carousel_event.entity.field_theatre_type.value == 'Cinema' %}
        {% if node.field_featured_carousel_event.entity.field_cinema_type.value|length %}
          {{ node.field_featured_carousel_event.entity.field_cinema_type.value }}<br>
        {% endif %}
      {% elseif node.field_featured_carousel_event.entity.field_theatre_type.value == 'Community Theater' %}
        {% if node.field_featured_carousel_event.entity.field_opening_performance.value == "1" %}
          <p>Opening Performance</p>
        {% endif %}
        {% if node.field_featured_carousel_event.entity.field_practices.value|length %}
          Practice: {{ node.field_featured_carousel_event.entity.field_practices.value }}<br>
        {% endif %}
      {% elseif node.field_featured_carousel_event.entity.field_theatre_type.value == 'Professional' %}
        {% if node.field_featured_carousel_event.entity.field_opening_performance.value == "1" %}
          <p>Opening Performance</p>
        {% endif %}
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_production_name.value|length %}
        {{ node.field_featured_carousel_event.entity.field_production_name.value }}<br>
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_directors.value|length %}
        Director: {{ node.field_featured_carousel_event.entity.field_directors.value }}<br>
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_producers.value|length %}
        Producer: {{ node.field_featured_carousel_event.entity.field_producers.value }}<br>
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_lead_actors.0.value|length %}
        {% if node.field_featured_carousel_event.entity.field_lead_actors.1.value|length %}
          Lead Actors:<br>
          {% for Actor in node.field_featured_carousel_event.entity.field_lead_actors %}
            {{ Actor.entity.title.value }}<br>
          {% endfor %}
        {% else %}
          Lead Actor: {{ node.field_featured_carousel_event.entity.field_lead_actors.entity.title.value }}<br>
        {% endif %}
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_musical.value == "1" %}
        {% if node.field_featured_carousel_event.entity.field_songbook_writers.1.value|length %}
          Songbook Writers:<br>
          {% for Writer in node.field_featured_carousel_event.entity.field_soongbook_writers %}
            {{ Writer.value }}<br>
          {% endfor %}
        {% else %}
          Songbook Writer: {{ node.field_featured_carousel_event.entity.field_soongbook_writers.value }}<br>
        {% endif %}
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_theater_group_page.uri.value|length %}
        <a href="{{ node.field_featured_carousel_event.entity.field_theater_group_page.uri }}" target="_blank">
          See {{ node.field_featured_carousel_event.entity.field_theater_group_page.title }} for more information
        </a>
      {% endif %}
    {% elseif node.field_featured_carousel_event.entity.field_event_category.value == 'Activity' %}
      {% if node.field_featured_carousel_event.entity.field_activity_event_type.vaule|length %}
        {{ node.field_featured_carousel_event.entity.field_activity_event_type.value }}<br>
        {% if node.field_featured_carousel_event.entity.field_how_to_join.value|length %}
          {{ node.field_featured_carousel_event.entity.field_how_to_join.value }}<br>
        {% endif %}
        {% if node.field_featured_carousel_event.entity.field_requirements.value|length %}
          {{ node.field_featured_carousel_event.entity.field_requirements.value }}<br>
        {% endif %}
        {% if node.field_featured_carousel_event.entity.field_participant.1.value|length %}
          Participants:<br>
          {% for Participant in node.field_featured_carousel_event.entity.field_participant %}
            {{ Participant.value }}<br>
          {% endfor %}
        {% else %}
          Participant: {{ node.field_featured_carousel_event.entity.field_participant.value }}<br>
        {% endif %}
      {% endif %}
    {% endif %}
  </div>
  
  <div class="venue-and-time">
    {{ node.field_featured_carousel_event.entity.field_venue.entity.title.value }}<br>
    {{ node.field_featured_carousel_event.entity.field_event_date.value|date("l, F j") }}<br>
    {% if node.field_featured_carousel_event.entity.field_show_time.value == "0" %}
      {{ node.field_featured_carousel_event.entity.field_event_date.value|date("g:i a") }}
    {% else %}
      Door: {{ node.field_featured_carousel_event.entity.field_event_date.value|date("g:i a") }}<br>
      Show: {{ node.field_featured_carousel_event.entity.field_time_of_show.0.value|date("g:i a") }}
    {% endif %}
  </div>
  
  <div class="event-ticket-info">
    {% if node.field_featured_carousel_event.entity.field_is_the_event_free.value == "1" %}
      <p>This event is free to the public.</p>
    {% else %}
      {# see if you need to display a range #}
      {% set basicCostDisplay = "$"~node.field_featured_carousel_event.entity.field_bottom_cost_range.value|number_format(2, '.', ',') %}
      {% if node.field_featured_carousel_event.entity.field_cost_range.value == "1" %}
        {% set basicCostDisplay = "$"~node.field_featured_carousel_event.entity.field_bottom_cost_range.value|number_format(2, '.', ',')~" - "~node.field_featured_carousel_event.entity.field_top_cost_range.value|number_format(2, '.', ',') %}
      {% endif %}
      {# now display the basic cost or door and advnce costs #}
      {% if node.field_featured_carousel_event.entity.field_at_door_price.value == "1" %}
        Tickets: <span class="price">{{ basicCostDisplay }}</span> advance <span class="price">${{ node.field_featured_carousel_event.entity.field_at_door.value|number_format(2, '.', ',') }}</span> day of<br>
      {% else %}
        Tickets: <span class="price">{{ basicCostDisplay }}</span><br>
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_childrens_price_discount.value == "1" %}
        Children: <span class="price">${{ node.field_featured_carousel_event.entity.field_childrens_price.value|number_format(2, '.', ',') }}</span><br>
      {% elseif node.field_featured_carousel_event.entity.field_childrens_discount_dollar.value == "1" %}
        Children: <span class="price">${{ node.field_featured_carousel_event.entity.field_childrens_dollars_discount.value|number_format(2, '.', ',') }} off</span><br>
      {% elseif node.field_featured_carousel_event.entity.field_childrens_discount_percent.value == "1" %}
        Children: <span class="price">{{ node.field_featured_carousel_event.entity.field_childrens_percent_off.value }}% off</span><br>
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_senior_price_discount.value == "1" %}
        Seniors: <span class="price">${{ node.field_featured_carousel_event.entity.field_senior_price.value|number_format(2, '.', ',') }}</span><br>
      {% elseif node.field_featured_carousel_event.entity.field_senior_discount_dollar.value == "1" %}
        Seniors: <span class="price">${{ node.field_featured_carousel_event.entity.field_senior_dollars_discount.value|number_format(2, '.', ',') }} off</span><br>
      {% elseif node.field_featured_carousel_event.entity.field_senior_discount_percent.value == "1" %}
        Seniors: <span class="price">{{ node.field_featured_carousel_event.entity.field_senior_percent_off.value }}% off</span><br>
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_student_price_discount.value == "1" %}
        Students: <span class="price">${{ node.field_featured_carousel_event.entity.field_student_price.value|number_format(2, '.', ',') }}</span><br>
      {% elseif node.field_featured_carousel_event.entity.field_student_discount_dollar.value == "1" %}
        Students: <span class="price">${{ node.field_featured_carousel_event.entity.field_student_dollars_off.value|number_format(2, '.', ',') }} off</span><br>
      {% elseif node.field_featured_carousel_event.entity.field_student_discount_percent.value == "1" %}
        Students: <span class="price">{{ node.field_featured_carousel_event.entity.field_student_percent_off.value }}% off</span><br>
      {% endif %}
      {% if node.field_featured_carousel_event.entity.field_veterans_price_discount.value == "1" %}
        Veterans: <span class="price">${{ node.field_featured_carousel_event.entity.field_veterans_price.value|number_format(2, '.', ',') }}</span><br>
      {% elseif node.field_featured_carousel_event.entity.field_veterans_discount_dollar.value == "1" %}
        Veterans: <span class="price">${{ node.field_featured_carousel_event.entity.field_veterans_dollars_off.value|number_format(2, '.', ',') }} off</span><br>
      {% elseif node.field_featured_carousel_event.entity.field_veterans_discount_percent.value == "1" %}
        Veterans: <span class="price">{{ node.field_featured_carousel_event.entity.field_veterans_percent_off.value }}% off</span><br>
      {% endif %}
    {% endif %}
  </div><br>
  
  <div class="event-blurb">
    <p>{{ node.field_featured_carousel_event.entity.field_event_description.value|raw }}</p>
  </div>
  
  <div class="address-info">
    {{ node.field_featured_carousel_event.entity.field_venue.entity.field_venue_address.value }}<br>
	  {{ node.field_featured_carousel_event.entity.field_venue.entity.field_city.entity.name.value }}, {{ node.field_featured_carousel_event.entity.field_venue.entity.field_venue_state.value }}
    {{ node.field_featured_carousel_event.entity.field_venue.entity.field_zip_code.value }}<br>
